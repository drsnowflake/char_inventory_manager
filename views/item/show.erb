<% if params[:moved] == "false" %>
  <h3>Unable to reassign item, reverted to original owner, characters cannot carry more than <%= Inventory.capacity %> items</h3>
<% end %>

<p>Name: <%= @item['item_name'] %></p>
<p>Slot: <%= @item['slot_name'] %></p>
<p>Flavour Text: <%= @item['flav'] %></p>

<hr />

<p>Current item owner is <a href="/character/<%= @item['char_id'] %>"><%= @item['char_name'] %></a></p>

<form action="/inventory/<%= @item['inv_id'] %>">
  <button type="submit">Change Owner</button>
</form>

<form action="/item/<%= @item['id'] %>/edit">
  <button type="submit">Edit Item</button>
</form>


<form action="/item/<%= @item['id'] %>/delete">
  <button type="submit">Delete Item</button>
</form>
